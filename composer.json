{
    "name": "chh/pipe",
    "bin": ["bin/pipe", "bin/pipe-server", "bin/pipe-compile"],
    "description": "Put your assets into the Pipe and smoke them.",
    "keywords": [
        "assets"
    ],
    "license": "MIT",
    "homepage": "https://github.com/CHH/pipe",
    "authors": [
        {
            "name": "Christoph Hochstrasser",
            "email": "christoph.hochstrasser@gmail.com",
            "homepage": "http://christophh.net"
        }
    ],
    "repositories": [
        {"type": "vcs", "url": "git://github.com/CHH/meta-template.git"}
    ],
    "require": {
        "php": ">=5.3.2",
        "chh/meta-template": "1.0.*@dev",
        "chh/shellwords": "~0.1",
        "chh/fileutils": "~1.0",
        "symfony/yaml": "~2.0",
        "ulrichsg/getopt-php": "*@dev",
        "monolog/monolog": "~1.0"
    },
    "suggest": {
        "react/http": "Enable the standalone asset server (~0.2.0)",
        "symfony/http-foundation": "Enable dynamic asset serving with Pipe\\Server",
        "imagine/imagine": "Enable image compressors"
    },
    "require-dev": {
        "react/http": "~0.2.0",
        "symfony/http-foundation": "~2.1",
        "imagine/imagine": "~0.4",
        "mikey179/vfsStream": "~1.1",
        "chh/bob": "1.0.*@dev",
        "phpunit/phpunit": "~3.7@stable"
    },
    "autoload": {
        "psr-0": {
            "Pipe": "lib/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
